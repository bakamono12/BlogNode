<%- include('layout.ejs') %>

    <div class="post-page">
        <div class="post-header">
            <a href="/" class="back-button">‚Üê Back</a>

            <div class="social-share">
                <a href="#" class="social-link twitter">üê¶</a>
                <a href="#" class="social-link facebook">üìò</a>
                <a href="#" class="social-link linkedin">üíº</a>
                <a href="#" class="social-link more">‚ãØ</a>
            </div>
        </div>

        <article class="post-content">
            <div class="post-meta">
                <span class="category category-<%= post.category.toLowerCase() %>">
                    <%= post.category %>
                </span>
                <span class="date">
                    <%= post.date %>
                </span>
            </div>

            <h1 class="post-title">
                <%= post.title %>
            </h1>

            <div class="post-body">
                <% const paragraphs=post.content.split('\n\n'); paragraphs.forEach(paragraph=> {
                    if (paragraph.trim().startsWith('.') || paragraph.trim().startsWith('@') ||
                    paragraph.trim().includes('{')) {
                    %>
                    <pre class="code-block"><%= paragraph.trim() %></pre>
                    <% } else { %>
                        <p>
                            <%= paragraph.trim() %>
                        </p>
                        <% } }); %>
            </div>
        </article>
    </div>